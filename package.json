{
  "name": "notification-system",
  "version": "1.0.0",
  "scripts": {
    "start:gateway": "cd apps/api-gateway && npm run start:dev",
    "start:user": "cd apps/user-service && npm run start:dev",
    "start:email": "cd apps/email-service && npm run start:dev",
    "start:push": "cd apps/push-service && npm run start:dev",
    "start:template": "cd apps/template-service && npm run start:dev",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:user\" \"npm run start:email\" \"npm run start:push\" \"npm run start:template\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "format": "prettier --write \"apps/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint \"apps/**/*.ts\"",
    "lint:fix": "eslint \"apps/**/*.ts\" --fix"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2",
    "typescript": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/youneedgreg/notification-system.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/youneedgreg/notification-system/issues"
  },
  "homepage": "https://github.com/youneedgreg/notification-system#readme",
  "description": "Distributed notification system with microservices architecture for handling email and push notifications using RabbitMQ message queues",
  "dependencies": {
    "opossum": "^9.0.0"
  }
}
